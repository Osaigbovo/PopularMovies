<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <com.osaigbovo.udacity.popularmovies.ui.widget.CircularImageView
        android:id="@+id/image_director"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/movie_director_image"
        android:scaleType="center"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_crew_cast" />

    <TextView
        android:id="@+id/text_director_name"
        style="@style/MovieText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:lines="1"
        android:textColor="@color/grey_700"
        android:textSize="@dimen/txt_14"
        app:layout_constraintEnd_toEndOf="@+id/image_director"
        app:layout_constraintStart_toStartOf="@+id/image_director"
        app:layout_constraintTop_toBottomOf="@+id/image_director"
        tools:text="@string/movie_director_name" />

</android.support.constraint.ConstraintLayout>